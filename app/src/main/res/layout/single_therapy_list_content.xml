<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lists_row_height"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/margin_small">

    <RelativeLayout
        android:id="@+id/layout_color"
        android:layout_width="0dp"
        android:layout_weight=".3"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_view_icon_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_color" />

        <TextView
            android:id="@+id/divide_color"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_icon_color"
            android:layout_toEndOf="@+id/image_view_icon_color"
            android:text="/" />

        <TextView
            android:id="@+id/text_view_color"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_icon_color"
            android:layout_toEndOf="@+id/divide_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_hz"
        android:layout_width="0dp"
        android:layout_weight=".3"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_view_icon_hz"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_hz" />

        <TextView
            android:id="@+id/divide_hz"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_icon_hz"
            android:layout_toEndOf="@+id/image_view_icon_hz"
            android:text="/" />

        <TextView
            android:id="@+id/text_view_hz"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_icon_hz"
            android:layout_toEndOf="@+id/divide_hz" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_icon_hz"
            android:layout_toEndOf="@+id/text_view_hz"
            android:textColor="@color/light_black"
            android:textSize="@dimen/list_edit_time_text_size"
            android:text=" Hz" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_time"
        android:layout_width="0dp"
        android:layout_weight=".3"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_view_icon_time"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_time" />

        <TextView
            android:id="@+id/divide_time"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_icon_time"
            android:layout_toEndOf="@+id/image_view_icon_time"
            android:text="/" />

        <TextView
            android:id="@+id/text_view_time"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_icon_time"
            android:layout_toEndOf="@+id/divide_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_icon_time"
            android:layout_toEndOf="@+id/text_view_time"
            android:textColor="@color/light_black"
            android:textSize="@dimen/list_edit_time_text_size"
            android:text=" ç§’" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/button_remove_item"
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/remove_item_option"
        android:src="@drawable/ic_action_remove"
        android:visibility="visible" />
</LinearLayout>