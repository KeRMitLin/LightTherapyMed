<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lists_row_height"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margin_small"
    android:paddingStart="@dimen/margin_small">

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_therapy_list_temp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/image_view_icon"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_small"
        android:paddingStart="@dimen/margin_small">

        <TextView
            android:id="@+id/text_view_list_name"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_list_name"
            android:layout_below="@+id/text_view_list_name"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/edit_time"
            android:textColor="@color/light_black"
            android:textSize="@dimen/list_edit_time_text_size" />

        <TextView
            android:id="@+id/text_view_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_list_name"
            android:layout_toEndOf="@+id/edit_time"
            android:layout_toRightOf="@+id/edit_time"
            android:textColor="@color/light_black"
            android:textSize="@dimen/list_edit_time_text_size" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_view_switch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_little"
        android:layout_centerVertical="true" />

</RelativeLayout>